<% @posts.each do |post| %>
	<div class="post_wrapper">
		<h2 class="title"><%= link_to post.title, post %></h2>
		<p class="data">
                <%= truncate(post.body) %>
                <p><%= link_to "查看详情", post %></p>
                </p>
		<p class="data"><%= post.created_at.strftime("%B, %d, %Y") %></p>
	</div>
<% end %>
